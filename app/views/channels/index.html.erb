<div class="container nav_padding">
 <p id="notice"><%= notice %></p>

<h1>Listing Channels</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Img hash</th>
      <th>Sec hash</th>
      <th>Slug</th>
      <th>Feedbacks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.name %></td>
        <td><%= channel.img_hash %></td>
        <td><%= channel.sec_hash %></td>
        <td><%= channel.slug %></td>
        <td><%= channel.feedbacks.count %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Channel', new_channel_path %>
</div>